@model Kyrsach.Models.InstructionViewModels.HomeViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = "Home Page";
}

<h1 style="text-align:center">@SharedLocalizer["Kyrsach"]</h1>
<h2 style="text-align:center">@SharedLocalizer["Desc"]</h2>
<hr />
<div class="row">
    <div id="myCarousel" class="carousel slide col-md-6" data-ride="carousel" style="height:650px;" data-interval="6000">
        <h3 style="text-align:center;">Random Instractions</h3>
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Random.Count; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="@(i==0?"active":"")"></li>
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @for (int i = 0; i < Model.Random.Count; i++)
            {
                <div class="item @(i==0?"active":"")">
                    <a asp-action="Index" asp-controller="Instruction" asp-route-Id="@Model.Random[i].Id">
                        <img src="@Model.Random[i].Image" class="img-responsive" style="height:580px; width:auto" />
                        <div class="carousel-caption" role="option">
                            <p>
                                @Model.Random[i].Name
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-md-6" style="background-color:#c1c1c1">
        <h3 style="text-align:center;">Newest</h3>
        <div class="container-fluid">
            <div class="row">
                @for (int i = 0; i < Model.Newest.Count; i++)
                {
                    <div class="col-md-6">
                        <div class="thumbnail">
                            <a asp-action="Index" asp-controller="Instruction" asp-route-Id="@Model.Newest[i].Id">
                                <img src="@Model.Newest[i].Image" style="width:100%">
                                <div class="caption">
                                    <p style="text-align:center;">@Model.Newest[i].Name</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


</div>

