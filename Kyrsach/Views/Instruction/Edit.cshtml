@model Kyrsach.Models.InstructionViewModels.InstructionEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Instruction</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="myform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuthorId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" data-provide="markdown" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>*@
            <div class="row">
                @Html.Partial("_StepsEdit", Model)
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ChangeStepsCount" />
                <input type="submit" asp-action="Edit" id="add" value="Add step" class="btn btn-default" />
                @if (Model.Steps.Count != 0)
                {
                <input type="submit" asp-action="Edit" id="delete" value="Delete step" class="btn btn-default" />
                }
            </div>

            <div class="form-group">
                <input asp-action="Edit" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            function AddStep() {
                $('#ChangeStepsCount').val(1);
            }

            function DeleteStep() {
                $('#ChangeStepsCount').val(-1);
            }

            $('#add').mouseover(AddStep);
            $('#delete').mouseover(DeleteStep);
        });
    </script>
}

